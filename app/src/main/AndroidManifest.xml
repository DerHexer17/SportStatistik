<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hight.ht.sportstatistik">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="hight.ht.sportstatistik.TestDataActivity"
            android:label="@string/app_name" />
        <activity
            android:name="hight.ht.sportstatistik.activities.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hight.ht.sportstatistik.activities.TeamActivity"
            android:label="@string/title_activity_team"
            android:parentActivityName="hight.ht.sportstatistik.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hight.ht.sportstatistik.activities.MainActivity" />
        </activity>
        <activity
            android:name="hight.ht.sportstatistik.activities.GameActivity"
            android:label="@string/title_activity_spiel"
            android:parentActivityName="hight.ht.sportstatistik.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hight.ht.sportstatistik.activities.MainActivity" />
        </activity>
        <activity
            android:name="hight.ht.sportstatistik.activities.StatsActivity"
            android:label="@string/title_activity_stats"
            android:parentActivityName="hight.ht.sportstatistik.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hight.ht.sportstatistik.activities.MainActivity" />
        </activity>
        <activity
            android:name="hight.ht.sportstatistik.activities.PlayerActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName="hight.ht.sportstatistik.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hight.ht.sportstatistik.activities.MainActivity" />
        </activity>
    </application>

</manifest>
