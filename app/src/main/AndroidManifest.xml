<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hight.ht.sportstatistik"
    android:versionCode="3"
    android:versionName="0.0.1.1">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <activity
            android:name=".TestDataActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TeamActivity"
            android:label="@string/title_activity_team"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hight.ht.sportstatistik.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.GameActivity"
            android:label="@string/title_activity_spiel"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hight.ht.sportstatistik.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.TeamStatsActivity"
            android:label="@string/title_activity_stats"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hight.ht.sportstatistik.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.PlayerActivity"
            android:label="@string/title_activity_player"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hight.ht.sportstatistik.activities.MainActivity" />
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.PlayerStatsActivity"
            android:label="@string/title_activity_player_stats"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hight.ht.sportstatistik.activities.MainActivity" />
        </activity>
    </application>

</manifest>