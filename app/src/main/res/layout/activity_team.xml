        android:textSize="20dp"
        android:gravity="center"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Spieler hinzufÃ¼gen"
        android:onClick="addSpieler"/>

    <ListView
        android:layout_width="fill_parent"
