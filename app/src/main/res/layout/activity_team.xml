<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="android.ht.sportstatistik.activities.TeamActivity">

    <TextView
        android:id="@+id/teamTitel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"/>

    <Button
        android:layout_width="200dp"

        android:layout_height="wrap_content"
        android:text="@string/addPlayer"
        android:id="@+id/buttonAddPlayerToTeam"
        android:layout_below="@id/teamTitel"
        android:background="@android:drawable/btn_default"
        android:onClick="addSpieler"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teamKit"
        android:layout_alignParentRight="true"
        android:layout_below="@id/teamTitel"
        android:layout_marginRight="50px"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teamSpieler"
        android:layout_below="@id/buttonAddPlayerToTeam"
        android:choiceMode="multipleChoice"></ListView>

</RelativeLayout>
